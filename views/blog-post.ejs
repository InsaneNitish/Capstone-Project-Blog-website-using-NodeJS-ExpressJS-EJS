<%- include("partials/header.ejs")  %>

<form action="/blogpost" method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Blog Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="eg. Memories from childhood" name="title">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Author Name</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="eg. Nitish Thakur" name="authorName">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Write Blog Here</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Start Writing from here...." name="blogContent"></textarea>
    </div>
    <div class="mb-3">
        <input type="submit" class="form-control" id="exampleFormControlInput1" placeholder="Submit">
    </div>
</form>


